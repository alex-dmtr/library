<% include ../../partials/header %>

<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>


<h2>Edit author <small><%=author.id%></small> </h2>


<form method="POST" class='editform'>
    <input type='hidden' value='<%=author.id%>' name='_id'>
    <div class="form-group">
        <label for="name">Name</label>
        <input type='text' name='name' value='<%=author.name%>' class='form-control' required>
    </div>

    <div class="form-group">
        <label for="summary">Summary</label>
        <textarea id="summary" name='summary' class='form-control' rows='10'><%= author.summary %></textarea>
    </div>
    
    <button type='submit' class='btn btn-default'>Save</button>
</form>
<% include ../../partials/footer %>


<script> 

    $(document).ready(function() {

        tinymce.init(
            {
                selector: '#summary',
            })
        
    })
</script>