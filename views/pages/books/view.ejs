<% include ../../partials/header %>


<div class='col-md-8'>
    <h1><%= book.name %> </h1>
    <h4><i><%= book.author.name %></i></h4>

    <%- book.summary %>

    <h3>Description</h3>
    <hr/>

    <%- book.description %>

    <h3>Comments</h3>
    <hr/>

    <% if (user != null) { %>
        <form method='POST'>
            <input type='hidden' name='user_id' value='<%= user._id %>'>
            <input type='hidden' name='book_id' value='<%= book._id %>'>
            <textarea class='form-control comment' name='text'></textarea>  
            <button class='btn btn-primary' type='submit'>Add comment</button>
        </form>
    <% } %>

    <% for (var i = 0; i < book.comments.length; i++) { %>
        <h4><%= book.comments[i].user.last_name + ' ' + book.comments[i].user.first_name %></h4>
        <p><%= book.comments[i].text %></p>
    <% } %>


</div>

<div class='col-md-4'>
    <table>
        <tr>
            <img class='img img-responsive' style='width:100%;' 
            src='http://awoiaf.westeros.org/images/thumb/9/93/AGameOfThrones.jpg/200px-AGameOfThrones.jpg'>
        </tr>

        <tr>
            <table class='table'>
                <tr>
                    <td>Name: </td>
                    <td><%= book.name %></td>
                </tr>
                <tr>
                    <td>Author: </td>
                    <td><a href='/authors/view?_id=<%=book.author._id%>'><%= book.author.name %></a></td>
                </tr>
                <tr>
                    <td>Price: </td>
                    <Td><%= book.price %></td>
                </tr>
                <tr>
                    <% if (user && user.is_admin) { %>
                    <tr >
                        <td colspan='2'>
                        <div align='center'>
                            <a href='/books/edit?_id=<%=book._id%>' class='btn btn-default form-control'>Edit</a>
                        </div>
                        </td>
                    </tr>
                    <% } %>
                </tr>
            </table>
        </tr>
    </table>

</div>

<% include ../../partials/footer %>