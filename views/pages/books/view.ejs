<% include ../../partials/header %>


<div class='col-md-8'>
    <h1><%= book.name %> </h1>
    <h4><i><%= book.author.name %></i></h4>

    <%- book.summary %>

    <h3>Description</h3>
    <hr/>

    <%- book.description %>
</div>

<div class='col-md-4'>
    <table>
        <tr>
            <img class='img img-responsive' style='width:100%;' 
            src='http://awoiaf.westeros.org/images/thumb/9/93/AGameOfThrones.jpg/200px-AGameOfThrones.jpg'>
        </tr>

        <tr>
            <table class='table'>
                <tr>
                    <td>Name: </td>
                    <td><%= book.name %></td>
                </tr>
                <tr>
                    <td>Author: </td>
                    <td><a href='/authors/view?_id=<%=book.author._id%>'><%= book.author.name %></a></td>
                </tr>
                <tr>
                    <td>Price: </td>
                    <Td><%= book.price %></td>
                </tr>
            </table>
        </tr>
    </table>

</div>

<% if (user && user.is_admin) { %>
    <a href='/books/edit?_id=<%=book._id%>'>Edit</a>
<% } %>

<% include ../../partials/footer %>